{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "pirate-chest",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "permissions": {
    "reddit": true
  },
  "media": {
    "dir": "assets"
  },
  "scheduler": {
    "tasks": {
      "daily_challenge_post": {
        "endpoint": "/internal/cron/daily-challenge",
        "cron": "0 8 * * *"
      }
    }
  },
  "menu": {
    "items": [
      {
        "label": "Post New Daily Challenge",
        "description": "Manually create the daily challenge post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "pirate_chest_dev"
  }
}
